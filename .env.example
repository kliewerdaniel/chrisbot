# BOT Platform Environment Configuration
# Copy this file to .env and configure your values

# ==================== FRONTEND SETTINGS ====================

# Node.js Environment
NODE_ENV=production

# Next.js Application
NEXT_PUBLIC_APP_NAME=BOT AI Platform
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Ollama Backend
NEXT_PUBLIC_OLLAMA_HOST=http://localhost:11434
NEXT_PUBLIC_OLLAMA_API_BASE=${NEXT_PUBLIC_OLLAMA_HOST}/api

# Database Configuration (Future enhancement)
NEXT_PUBLIC_DB_TYPE=indexeddb
NEXT_PUBLIC_DB_NAME=bot_db
NEXT_PUBLIC_DB_VERSION=1

# ==================== SECURITY SETTINGS ====================

# CORS Origins (comma-separated)
NEXT_PUBLIC_CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001

# Content Security Policy (additional allowed domains)
NEXT_PUBLIC_CSP_IMG_SOURCES='self' data: https:
NEXT_PUBLIC_CSP_CONNECT_SOURCES='self' http://localhost:11434

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE_SYNTHESIS=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true
NEXT_PUBLIC_ENABLE_CONVERSATION_BRANCHING=true
NEXT_PUBLIC_ENABLE_SESSION_MANAGEMENT=true

# ==================== UI/UX SETTINGS ====================

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=system
NEXT_PUBLIC_ENABLE_THEME_PERSISTENCE=true

# Accessibility
NEXT_PUBLIC_REDUCED_MOTION=false
NEXT_PUBLIC_HIGH_CONTRAST=false

# Animation Settings
NEXT_PUBLIC_ANIMATION_DURATION=200ms
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# ==================== ANALYTICS & MONITORING ====================

# Monitoring (Recommended: Sentry, Vercel Analytics, etc.)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ANALYTICS_ID=

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_REPORT_WEB_VITALS=false

# ==================== DEVELOPER SETTINGS ====================

# Development Features
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=warn

# Testing
NEXT_TEST_BROWSER=chromium
NEXT_TEST_SKIP_ENV_CHECK=true

# ==================== EXTERNAL SERVICE INTEGRATIONS ====================

# (For future enhancements)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GROQ_API_KEY=

# Database (if using external DB)
# DATABASE_URL=
# REDIS_URL=

# ==================== DEPLOYMENT SETTINGS ====================

# Deployment Platform (vercel, render, railway, self-hosted)
DEPLOYMENT_PLATFORM=self-hosted

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_MAX_RETRIES=3

# ==================== OLLAMA CONFIGURATION ====================

# Model Defaults
OLLAMA_DEFAULT_MODEL=llama3.2:3b
OLLAMA_FALLBACK_MODEL=mistral:7b

# Model Settings
OLLAMA_CONTEXT_WINDOW=4096
OLLAMA_MAX_TOKENS=2048
OLLAMA_TEMPERATURE=0.7

# Resource Limits
OLLAMA_MAX_LOADED_MODELS=1
OLLAMA_MAX_QUEUE=512

# ==================== CONTAINER SETTINGS ====================

# Docker Configuration
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=
DOCKER_BUILD_CONTEXT=.

# Volume Mounts
OLLAMA_DATA_PATH=./data/ollama
SESSION_DATA_PATH=./data/sessions
UPLOAD_DATA_PATH=./data/uploads

# ==================== BACKUP SETTINGS ====================

# Automated Backups
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d
BACKUP_DESTINATION=./backups/

# ==================== SECURITY HEADERS ====================

# Additional Security Headers
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_REPORT_ONLY=false
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin

# ==================== PERFORMANCE SETTINGS ====================

# Bundle Analysis
ENABLE_BUNDLE_ANALYSIS=false
BUNDLE_ANALYSIS_OUTPUT_DIR=./.next/analyze

# Cache Settings
NEXT_PUBLIC_CACHE_STRATEGY=network-first
NEXT_PUBLIC_CACHE_TTL=3600000

# ==================== FEATURE FLAGS ====================

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_FEATURES=false

# Third-party Integrations
ENABLE_EXTERNAL_LINKS=true
ENABLE_SOCIAL_SHARING=false

# ==================== ADMIN SETTINGS ====================

# Admin Features (Future)
ENABLE_ADMIN_PANEL=false
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@localhost

# ==================== LOGGING ====================

# Application Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=console

# Error Reporting
ENABLE_ERROR_REPORTING=false
ERROR_REPORTING_ENDPOINT=

# ==================== MAINTENANCE ====================

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please check back later."

# Update Settings
ENABLE_AUTO_UPDATE=false
UPDATE_CHECK_INTERVAL=24h
